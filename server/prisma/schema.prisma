generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model DeviceStatus {
  id        Int      @id @default(autoincrement())
  deviceId  String
  name      String
  label     String?
  project   String
  status    String
  lastActivityTime DateTime?
  offlineHours Float?
  
  reportId  String
  createdAt DateTime @default(now())

  @@index([project])
  @@index([reportId])
}

model ReportTask {
  id          String   @id @default(uuid())
  date        String   @unique
  totalDevices Int
  onlineCount  Int
  offlineCount Int
  createdAt   DateTime @default(now())
}
